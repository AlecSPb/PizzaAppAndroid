<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loco-Local Pizza"
        android:id="@+id/textView2"
        android:textStyle="italic"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Payment"
        android:id="@+id/text_AddPayment"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_alert_dialog_button_bar_height"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_weight="0.05" />

    <EditText
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Name"
        android:layout_gravity="center_horizontal"
        android:hint="Name" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_CardNumber"
        android:layout_gravity="center_horizontal"
        android:hint="Card Number (no spaces or dashes)" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_Amount"
        android:layout_gravity="center_horizontal"
        android:hint="Amount" />

    <EditText
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/cvs_number"
        android:layout_gravity="center_horizontal"
        android:hint="CVS (3 digits on back)"
        android:inputType="number" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText_expDate"
        android:layout_gravity="center_horizontal"
        android:hint="Exp Date (Format MM/YYYY)" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/buttonSubmit"
        android:layout_gravity="center_horizontal" />

</LinearLayout>