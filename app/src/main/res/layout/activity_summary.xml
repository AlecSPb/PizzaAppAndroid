<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Loco-Local Pizza"
        android:id="@+id/textView6"
        android:textStyle="italic"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Summary"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_alert_dialog_button_bar_height"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:id="@+id/summaryMenuItems"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.90"
        android:fastScrollEnabled="true"
        android:nestedScrollingEnabled="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/summaryPhone"
        android:hint="Phone Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summaryAddr"
        android:layout_gravity="center_horizontal"
        android:hint="Street Address" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:rowCount="3"
        android:columnCount="3"
        android:orientation="horizontal">

        <EditText
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/summaryCity"
            android:hint="City"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:id="@+id/summaryCountry"
            android:layout_row="0"
            android:layout_column="2"
            android:hint="Country" />

        <EditText
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:id="@+id/summaryState"
            android:layout_gravity="center_horizontal"
            android:hint="State"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:id="@+id/summaryZip"
            android:layout_gravity="center_horizontal"
            android:hint="Zip"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <StackView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stackView"
        android:layout_gravity="right" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:id="@+id/summaryPlaceOrderButton"
        android:layout_gravity="right" />

</LinearLayout>